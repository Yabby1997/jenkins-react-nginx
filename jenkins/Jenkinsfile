pipeline {
     agent any
     tools {nodejs "nodejs"}

     stages {
        stage("Build") {
            steps {
                dir("test") {
                    sh "npm install"
                    sh "npm run build"
                }
            }
        }
        stage("Deploy") {
            steps {
                sh "cd /home"
                sh "ls"
                dir("test") {
                    sh "cp -r build /home/app/react/"
                }
            }
        }
    }
}